{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements-legacy.txt"
  },
  "deploy": {
    "startCommand": "python app.py",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "FLASK_ENV": "production"
      }
    }
  }
}